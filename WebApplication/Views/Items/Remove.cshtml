@model MyAccess.Domains.Entities.ItemEntity

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Items";
}

@using (@Html.BeginForm("Remove", "Items", FormMethod.Post, new { @class = "user" }))
{
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            @Html.TextBoxFor(model => model.System.Name, htmlAttributes: new { @type = "text", @class = "form-control form-control-user", @disabled = true })
            @Html.ValidationMessageFor(model => model.System.Name, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            @Html.TextBoxFor(model => model.Type.Name, htmlAttributes: new { @type = "text", @class = "form-control form-control-user", @disabled = true })
            @Html.ValidationMessageFor(model => model.Type.Name, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @type = "text", @class = "form-control form-control-user", @disabled = true })
            @Html.ValidationMessageFor(model => model.Name, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-user btn-block">Remove System</button>

    <hr>

    <div class="text-center">
        <a href="@Url.Action("Index", "Items")" class="btn btn-danger">
            <i class="fas fa-chevron-left"></i>
        </a>
    </div>
}