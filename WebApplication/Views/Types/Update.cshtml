@model MyAccess.Domains.Entities.TypeEntity

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Types";
}

@using (@Html.BeginForm("Update", "Types", FormMethod.Post, new { @class = "user" }))
{
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @type = "text", @class = "form-control form-control-user", @placeholder = Html.DisplayNameFor(x => x.Name) })
            @Html.ValidationMessageFor(model => model.Name, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-user btn-block">Update System</button>

    <hr>

    <div class="text-center">
        <a href="@Url.Action("Index", "Types")" class="btn btn-danger">
            <i class="fas fa-chevron-left"></i>
        </a>
    </div>
}